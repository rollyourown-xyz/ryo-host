#!/bin/sh
echo -n "DNS setup started"

sudo lxc network list

sudo resolvectl dns lxdbr0 '{{ lxd_br0_network_part }}.1'
sudo resolvectl domain lxdbr0 '~lxdbr0'

sudo resolvectl dns {{ project_id }} '{{ lxd_project_network_part }}.1'
sudo resolvectl domain {{ project_id }} '~{{ project_id }}'

echo "DNS setup completed"
